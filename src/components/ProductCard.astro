---
const { name, desc, price, category } = Astro.props;
import { IoMdCart } from "react-icons/io";

import productImage from '../../public/productos.jpeg';
import { Image } from "astro:assets";
---

<div class="flex flex-col overflow-hidden border border-gray-300 rounded-lg min-h-2xl">
    <Image src={productImage} alt="" width={200} height={200}  class="block w-full max-h-full object-cover"/>
    <div class="flex p-4 flex-col h-52 justify-between">
        <div class="flex flex-col gap-2 items-start">
            <h4 class="text-lg font-bold">{name}</h4>
            <p class="text-gray-600">{desc}</p>
            <p class="text-green-600 px-2 py-1 bg-green-100 border border-green-600 rounded w-fit text-sm">{category.toUpperCase()}</p>
        </div>
        <div class="flex justify-between items-center">
            <p class="text-gray-600 text-lg font-bold">{price.toLocaleString('es-AR', { style: 'currency', currency: 'ARS' })}</p>
            <button
                class="cursor-pointer rounded-lg flex gap-2 px-2 py-1 items-center bg-black text-white"
                ><IoMdCart /> Add to cart </button
            >
        </div>
    </div>
</div>
